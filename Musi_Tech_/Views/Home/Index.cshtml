@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<style>
    body {
        background-color: #cccccc;
        background-image: url('../../Content/Image/abstractmusicnapa.jpg');
        background-size: 200%;
        background-repeat: no-repeat;
    }

    body {
        padding-top: 300px;
        padding-bottom: 0px;
        padding-left: 50px;
    }

    html, body {
        height: 100%;
        margin: 0;
        padding: 0
    }

    .container-fluid {
        height: 100%;
        display: table;
        width: 100%;
        padding: 0;
    }

    .row-fluid {
        height: 100%;
        display: table-cell;
        vertical-align: middle;
    }

    .centering {
        float: none;
        margin: 0 auto;
    }

    .button {
        border: 0;
        background: transparent;
        box-sizing: border-box;
        width: 0;
        height: 65px;
        border-color: transparent transparent transparent #202020;
        transition: 100ms all ease;
        cursor: pointer;
        border-style: solid;
        border-width: 35px 0 35px 59px;
    }

    .paused {
        border-style: double;
        border-width: 0px 0 0px 59px;
    }

    .hover {
        border-color: transparent transparent transparent #404040;
    }
</style>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>
    <div class="container">
        <div class="outer">
            <div class="details">
            </div>
        </div>
    </div>
</body>
<body1>
    <div class="jumbotron">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="centering text-center">
                    <h1>MusiTech</h1>
                    @Html.ActionLink(" ", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "fa fa-play", style = "font-size:48px;color:maroon" })
                </div>
            </div>
        </div>
    </div>
</body1>

<body2>
    <div class="row">
        <div class="col-md-4">
            <h2>Instruments</h2>
            <style>
                .jumbotron {
                    padding-bottom: 300px;
                }
            </style>
            <p>
                We recommend renting or buying your instrument prior to the first music lesson. Click on the button below to begin shopping for your instrument of choice!
            </p>
            @Html.ActionLink(" ", " ", "https://www.theinstrumentplace.com/?utm_medium=referral&utm_campaign=paid&utm_source=google&utm_content=instrument_rental&gclid=Cj0KCQiAnY_jBRDdARIsAIEqpJ0n5W4pisxxc4Z5XrhYox9rt1Aqz5FfoTvmPwuWXCHatKgf8lJk0NwaAvVTEALw_wcB", routeValues: null, htmlAttributes: new { @class = "fa fa-play", style = "font-size:48px;color:rgb(169,169,169)" })
        </div>
        <div class="col-md-4">
            <h2>Request Lesson</h2>
            <p>
                The link below will take you to our request lessons page. Click on the button below to schdule your first music lesson!
            </p>
            @Html.ActionLink(" ", "Create", "LessonRequest", routeValues: null, htmlAttributes: new { @class = "fa fa-play", style = "font-size:48px;color:rgb(169,169,169)" })
        </div>
        <div class="col-md-4">
            <h2>Tuning Tool</h2>
            <p>Here at MusiTech we understand that making sure your instrument is in tune is just as important as having a drummer in a rock band! Without it, it just wouldn't sound right. Click on the link below to use the online tuning tool.</p>
            @Html.ActionLink(" ", " ", "https://www.alexdemartos.es/wtuner/", routeValues: null, htmlAttributes: new { @class = "fa fa-play", style = "font-size:48px;color:rgb(169,169,169)" })
        </div>
    </div>
</body2>

