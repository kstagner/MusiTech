@model IEnumerable<Musi_Tech_.Models.LessonRequestListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<img /> src="~/Content/Image/abstractmusic.jpg"
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LessonRequestID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instrument)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestedStartDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LessonRequestID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instrument)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestedStartDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.LessonRequestID }) |
            @Html.ActionLink("Details", "Details", new { id = item.LessonRequestID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.LessonRequestID })
        </td>
    </tr>
    }

</table>
